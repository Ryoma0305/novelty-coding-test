---
import styles from './EnvironmentSection.module.scss';

export interface EnvironmentItem {
  title: string;
  text: string;
  imagePc: string;
  imageSp: string;
  link: string;
}

export interface Props {
  items: EnvironmentItem[];
}

const { items } = Astro.props;
---

<section class={styles.environmentSection}>
  <div class={styles.container}>
    <div class={styles.environmentSectionContentContainer}>
      <div class={styles.environmentSectionContent}>
        <div class={styles.environmentSectionTitleGroupContainer}>
          <hgroup class={styles.environmentSectionTitleGroup}>
            <h2 class={styles.environmentSectionTitle}>Environment</h2>
            <p class={styles.environmentSectionText}>働く環境</p>
          </hgroup>
          <span class={styles.environmentSectionImage01}>
            <picture>
              <source
                srcset="/images/bg-environment01-pc.webp"
                media="(min-width:768px)"
              />
              <img src="/images/bg-environment01.webp" alt="" />
            </picture>
          </span>
          <span class={styles.environmentSectionImage02}>
            <picture>
              <source
                srcset="/images/bg-environment02-pc.webp"
                media="(min-width:768px)"
              />
              <img src="/images/bg-environment02.webp" alt="" />
            </picture>
          </span>
        </div>
      </div>
      <div class={styles.environmentListContainer}>
        <ul class={styles.environmentList}>
          {
            items.map(item => (
              <li class={styles.environmentItem}>
                <a href={item.link} class={styles.environmentItemLink}>
                  <div class={styles.environmentItemTitleGroup}>
                    <h3 class={styles.environmentItemTitle}>{item.title}</h3>
                    <p class={styles.environmentItemText}>{item.text}</p>
                  </div>
                  <div class={styles.environmentItemImageContainer}>
                    <p class={styles.environmentItemImage}>
                      <picture>
                        <source
                          srcset={item.imagePc}
                          media="(min-width:768px)"
                        />
                        <img src={item.imageSp} alt={item.title} />
                      </picture>
                    </p>
                    <span class={styles.environmentItemIcon}>
                      <span class={styles.btnArrowIcon}>
                        <svg
                          width="14"
                          height="14"
                          viewBox="0 0 14 14"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            d="M2 1.95508H12M12 1.95508V11.9551M12 1.95508L2 11.9551"
                            stroke="currentColor"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                          />
                        </svg>
                      </span>
                    </span>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
